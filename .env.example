# MentraOS LLM Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Core API keys
AUGMENTOS_API_KEY=your_augmentos_api_key_here
PACKAGE_NAME=MentraOS-LLM
PORT=80

# LLM Provider Configuration
LLM_PROVIDER=perplexity
LLM_MODEL=sonar

# API Keys (set only what you need based on your chosen provider)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional providers
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
LOCATIONIQ_TOKEN=your_locationiq_token_here
JINA_API_KEY=your_jinaai_token_here

# Azure OpenAI specific (if using Azure)
AZURE_OPENAI_API_INSTANCE_NAME=your_azure_instance_name
AZURE_OPENAI_API_DEPLOYMENT_NAME=your_azure_deployment_name

# Google Cloud specific (if using Google models)
GOOGLE_PROJECT_ID=your_google_cloud_project_id
