{
  "name": "MentraLLM",
  "description": "BYO LLM to MentraOS",
  "onboardingInstructions": "",
  "publicUrl": "https://mentraos-llm-410741782200.us-central1.run.app",
  "logoURL": "https://imagedelivery.net/nrc8B2Lk8UIoyW7fY8uHVg/aed21a21-f1a4-4306-a276-8f3f46e08200/square",
  "appType": "background",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "Required to capture user voice input for transcription and wake word detection."
    },
    {
      "type": "LOCATION",
      "description": "Required to provide contextual responses based on user location."
    },
    {
      "type": "READ_NOTIFICATIONS",
      "description": "Required to read incoming phone notifications for context-aware assistance."
    },
    {
      "type": "POST_NOTIFICATIONS",
      "description": "Required to send notifications and reminders to the user."
    },
    {
      "type": "CALENDAR",
      "description": "Required to access and manage calendar events for scheduling and reminders."
    },
    {
      "type": "BACKGROUND_LOCATION",
      "description": "Required to update location context even when the app is running in the background."
    }
  ],
  "settings": [
