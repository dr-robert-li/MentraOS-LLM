{
  "name": "MentraLLM",
  "description": "BYO LLM to MentraOS",
  "onboardingInstructions": "",
  "publicUrl": "https://mentraos-llm-410741782200.us-central1.run.app",
  "logoURL": "https://imagedelivery.net/nrc8B2Lk8UIoyW7fY8uHVg/aed21a21-f1a4-4306-a276-8f3f46e08200/square",
  "appType": "background",
  "permissions": [
    {
      "type": "MICROPHONE",
      "description": "Required to capture user voice input for transcription and wake word detection."
    },
    {
      "type": "LOCATION",
      "description": "Required to provide contextual responses based on user location."
    },
    {
      "type": "READ_NOTIFICATIONS",
      "description": "Required to read incoming phone notifications for context-aware assistance."
    },
    {
      "type": "POST_NOTIFICATIONS",
      "description": "Required to send notifications and reminders to the user."
    },
    {
      "type": "CALENDAR",
      "description": "Required to access and manage calendar events for scheduling and reminders."
    },
    {
      "type": "BACKGROUND_LOCATION",
      "description": "Required to update location context even when the app is running in the background."
    }
  ],
  "settings": [
    {
      "type": "group",
      "key": "",
      "label": "",
      "title": "LLM Provider Settings"
    },
    {
      "type": "select",
      "key": "llm_provider",
      "label": "LLM Provider",
      "defaultValue": "perplexity",
      "options": [
        {
          "label": "OpenAI",
          "value": "openai"
        },
        {
          "label": "Anthropic",
          "value": "anthropic"
        },
        {
          "label": "Cohere",
          "value": "cohere"
        },
        {
          "label": "Perplexity",
          "value": "perplexity"
        },
        {
          "label": "Custom",
          "value": "custom"
        }
      ]
    },
    {
      "type": "text",
      "key": "llm_model",
      "label": "Model Name",
      "defaultValue": "sonar"
    },
    {
      "type": "text",
      "key": "llm_api_key",
      "label": "API Key",
      "defaultValue": ""
    }
  ],
  "tools": [
    {
      "id": "web_search",
      "description": "Search the web for current information, news, and facts using Jina AI search",
      "activationPhrases": [
        "search for",
        "look up",
        "find information about",
        "what's the latest on",
        "search the web"
      ],
      "parameters": {
        "query": {
          "type": "string",
          "description": "The search query or keywords to search for",
          "required": true
        },
        "location": {
          "type": "string",
          "description": "Optional location context for the search (city, state)",
          "required": false
        }
      }
    },
    {
      "id": "list_available_apps",
      "description": "List all available apps on the smart glasses and their current running status",
      "activationPhrases": [
        "list apps",
        "show available apps",
        "what apps are available",
        "which apps can I use"
      ],
      "parameters": {
        "include_running": {
          "type": "boolean",
          "description": "Whether to include the running status of each app",
          "required": false
        }
      }
    },
    {
      "id": "control_app",
      "description": "Start or stop apps on the smart glasses",
      "activationPhrases": [
        "start app",
        "stop app",
        "launch",
        "open app",
        "close app",
        "quit app"
      ],
      "parameters": {
        "action": {
          "type": "string",
          "description": "Action to perform on the app",
          "required": true,
          "enum": [
            "start",
            "stop"
          ]
        },
        "packageName": {
          "type": "string",
          "description": "Package name of the app to control",
          "required": true
        }
      }
    },
    {
      "id": "calculate",
      "description": "Perform mathematical calculations and solve math problems",
      "activationPhrases": [
        "calculate",
        "compute",
        "what is",
        "solve",
        "math problem"
      ],
      "parameters": {
        "expression": {
          "type": "string",
          "description": "Mathematical expression to calculate",
          "required": true
        }
      }
    },
    {
      "id": "get_news_summary",
      "description": "Fetch and summarize recent tech news headlines into concise one-liners",
      "activationPhrases": [
        "what's in the news",
        "latest news",
        "news summary",
        "tech news",
        "current events"
      ],
      "parameters": {}
    },
    {
      "id": "analyze_notifications",
      "description": "Filter and rank phone notifications by importance, providing concise summaries for smart glasses display",
      "activationPhrases": [
        "check notifications",
        "important notifications",
        "filter notifications",
        "notification summary",
        "what notifications do I have"
      ],
      "parameters": {
        "max_notifications": {
          "type": "number",
          "description": "Maximum number of notifications to return (default: 5)",
          "required": false
        }
      }
    }
  ]
}