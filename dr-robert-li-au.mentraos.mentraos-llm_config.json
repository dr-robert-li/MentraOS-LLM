  "tools": [
    {
      "id": "web_search",
      "description": "Search the web for current information, news, and facts using Jina AI search",
      "activationPhrases": [
        "search for",
        "look up",
        "find information about",
        "what's the latest on",
        "search the web"
      ],
      "parameters": {
        "query": {
          "type": "string",
          "description": "The search query or keywords to search for",
          "required": true
        },
        "location": {
          "type": "string",
          "description": "Optional location context for the search (city, state)",
          "required": false
        }
      }
    },
    {
      "id": "list_available_apps",
      "description": "List all available apps on the smart glasses and their current running status",
      "activationPhrases": [
        "list apps",
        "show available apps",
        "what apps are available",
        "which apps can I use"
      ],
      "parameters": {
        "include_running": {
          "type": "boolean",
          "description": "Whether to include the running status of each app",
          "required": false
        }
      }
    },
    {
      "id": "control_app",
      "description": "Start or stop apps on the smart glasses",
      "activationPhrases": [
        "start app",
        "stop app",
        "launch",
        "open app",
        "close app",
        "quit app"
      ],
      "parameters": {
        "action": {
          "type": "string",
          "description": "Action to perform on the app",
          "required": true,
          "enum": [
            "start",
            "stop"
          ]
        },
        "packageName": {
          "type": "string",
          "description": "Package name of the app to control",
          "required": true
        }
      }
    },
    {
      "id": "calculate",
      "description": "Perform mathematical calculations and solve math problems",
      "activationPhrases": [
        "calculate",
        "compute",
        "what is",
        "solve",
        "math problem"
      ],
      "parameters": {
        "expression": {
          "type": "string",
          "description": "Mathematical expression to calculate",
          "required": true
        }
      }
    },
    {
      "id": "get_news_summary",
      "description": "Fetch and summarize recent tech news headlines into concise one-liners",
      "activationPhrases": [
        "what's in the news",
        "latest news",
        "news summary",
        "tech news",
        "current events"
      ],
      "parameters": {}
    },
    {
      "id": "analyze_notifications",
      "description": "Filter and rank phone notifications by importance, providing concise summaries for smart glasses display",
      "activationPhrases": [
        "check notifications",
        "important notifications",
        "filter notifications",
        "notification summary",
        "what notifications do I have"
      ],
      "parameters": {
        "max_notifications": {
          "type": "number",
          "description": "Maximum number of notifications to return (default: 5)",
          "required": false
        }
      }
    }
  ]
}