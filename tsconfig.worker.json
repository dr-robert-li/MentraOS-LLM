{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "WebWorker"],
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noEmit": false,
    "types": ["@cloudflare/workers-types", "node"]
  },
  "include": [
    "src/worker.ts",
    "src/utils/**/*"
  ],
  "exclude": [
    "src/index.ts",
    "src/agents/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
